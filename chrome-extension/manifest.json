{
  "manifest_version": 3,
  "name": "Web QA Assistant",
  "version": "1.0",
  "description": "Ask questions based on the current webpage content.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}
